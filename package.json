{
  "name": "react-library-rollup",
  "version": "0.1.0",
  "description": "Boilerplate for Resact with Typescript with rollup.js (not webpack)",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "umd:main": "dist/index.umd.production.min.js",
  "unpkg": "dist/index.umd.production.min.js",
  "jsdelivr": "dist/index.umd.production.min.js",
  "jsnext:main": "dist/index.esm.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "sideEffects": true,
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./dist/index.ie11": {
      "import": "./dist/index.ie11.js",
      "require": "./dist/index.ie11.js"
    }
  },
  "scripts": {
    "bundlesize": "npm run build:modern && bundlesize",
    "check:package": "package-check",
    "cp:dts": "copyfiles -f ./src/**/*.d.ts dist && rimraf dist/**/*.test.d.ts",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "lint:types": "tsc --noEmit",
    "clean": "rimraf dist",
    "build": "node scripts/rollup/writeCjsEntryFile.js && npm run build:modern && npm run build:ie11 && npm run cp:dts",
    "build:modern": "rollup -c ./scripts/rollup/rollup.config.js",
    "build:esm": "rollup -c ./scripts/rollup/rollup.esm.config.js",
    "build:ie11": "rollup -c ./scripts/rollup/rollup.ie11.config.js",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "rollup.js",
    "react",
    "typescript",
    "library",
    "npm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StefanoGagliardi/react-form-generator-web.git"
  },
  "bugs": {
    "url": "https://github.com/StefanoGagliardi/react-form-generator-web/issues"
  },
  "homepage": "https://gagliardistefano.it/react-form/index.html",
  "author": "Stefano Gagliardi <stefano.gagliardi@sitisrl.it>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.8",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@skypack/package-check": "^0.2.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "bundlesize": "^0.18.0",
    "copyfiles": "^2.3.0",
    "core-js": "^3.7.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "typescript": "^4.1.2"
  },
  "bundlesize": [
    {
      "path": "./dist/index.cjs.production.min.js",
      "maxSize": "9.5 kB"
    }
  ],
  "peerDependencies": {
    "react": "^16.8.0 || ^17"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint:fix"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ]
  }
}
